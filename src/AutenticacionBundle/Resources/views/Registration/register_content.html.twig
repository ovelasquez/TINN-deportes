{% trans_default_domain 'FOSUserBundle' %}

<div class="panel white-alpha-90" >
    <div class="panel-heading">
        <div class="panel-title text-center"><h2>Registrate en tu <span class="text-primary">Liga</span></h2></div>
    </div>     
    <div class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
{{ form_widget(form) }}
       <div class="registroCampo">
    {{ form_errors(form) }}
</div>
<div class="registroCampo">
    {{ form_row(form.nombre,{'attr': {'class': ''}}) }}
</div>
<div class="registroCampo">
    {{ form_row(form.apellido,{'attr': {'class': ''}}) }}
</div>
<div class="registroCampo">
    {{ form_row(form.email,{'attr': {'class': ''}}) }}
</div>
<div class="registroCampo">
    {{ form_row(form.username,{'attr': {'class': ''}}) }}
</div>
<div class="registroCampo ">
    {{ form_row(form.plainPassword) }}            
</div>        

<div>
    <input type="submit" value="{{ 'registration.submit'|trans }}" />
</div>
{{ form_end(form) }}  
    </div>                     
</div> 






