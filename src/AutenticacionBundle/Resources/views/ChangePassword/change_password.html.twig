{% extends "::gentelella.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %} Usuario {% endblock %}
{% block Titulo %} DeportesTINN {% endblock %}
{% block Subtitulo %} Cambio de Contrase√±a <small>Editar</small> {% endblock %} 
{% block cerrar %} href="{{ path('backend_default_index')}}" {% endblock %}    

{% block body %} 
    <div class="panel white-alpha-90" >    
        <div class="panel-body" >
            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'form-horizontal form-label-left' } }) }}
            {{ form_errors(form) }}

            <div class="form-group">
                <label class="control-label col-md-4 col-sm-4 col-xs-12"
                       for="current_password">{{ form_label(form.current_password) }} <span
                        class="required">*</span>
                </label>
                <div class="col-md-4 col-sm-4 col-xs-12">{{form_widget(form.current_password,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
            </div>
            <div>

                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12"
                           for="first-name">{{ form_label(form.plainPassword.first) }} <span
                            class="required">*</span>
                    </label>
                    <div class="col-md-4 col-sm-4 col-xs-12">{{form_widget(form.plainPassword.first,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>

                </div>

                <div class="form-group">
                    <label class="control-label col-md-4 col-sm-4 col-xs-12"
                           for="first-name">{{ form_label(form.plainPassword.second) }} <span
                            class="required">*</span>
                    </label>

                    <div class="col-md-4 col-sm-4 col-xs-12">{{form_widget(form.plainPassword.second,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} } ) }}</div>
                </div>
                <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                          <input type="submit" class="btn btn-success"  value="{{ 'change_password.submit'|trans }}" />
                        </div>
                      </div>
                
            </div>
            {{ form_end(form) }}
        </div>                     
    </div> 

{% endblock %}
